    <script>
        function withdraw() {
            let wit = parseFloat(document.getElementById("withdaws").value);
            let add = document.getElementById("theadd").value;

            let radioButtons = document.getElementsByName("cur");
        let radioButtonChecked = false;

        // Check if at least one radio button is checked
        for (let i = 0; i < radioButtons.length; i++) {
            if (radioButtons[i].checked) {
                radioButtonChecked = true;
                break;
            }
        }

        if (!radioButtonChecked) {
            alert("Please choose a payment method");
            return; // Exit the function early if no radio button is checked
        }
    
            if (wit < 50 || wit > 1000000) {
                alert("Withdrawal amount should be between $50 and $1,000,000");
                return;
            }

            if(add == ""){
                alert("Wallet Address should not be empty");
                return;
            }
        }
    </script>
    
